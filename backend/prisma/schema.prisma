generator client {
    provider = "prisma-client"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    // url      = env("DATABASE_URL")
}

model Order {
    id         Int    @id @default(autoincrement())
    orderId    Int    @unique
    userId     Int
    items      Json
    totalPrice Float
    status     String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    syncedAt  DateTime
}

model Products {
    id           Int     @id @default(autoincrement())
    productId    Int     @unique
    name         String
    description  String
    price        Float
    unit         String
    image        String
    discount     Int
    availability Boolean
    brand        String
    category     String
    rating       Float
    reviews      Json

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    syncedAt  DateTime
}
